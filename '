#include <stdio.h>
#include <stdlib.h>


typedef struct Node {
    int info;
    struct Node *left;
    struct Node *right;
    struct Node *father;
} Node;

Node *root = NULL; // initializing the root to null at first



// func to create newNode pointer

Node *createNode (int info){
    Node *ptrnew = (Node *)malloc(sizeof(Node));
    if(ptrnew==NULL){
        printf("Memory allocatin failed.");
        exit(0);
    } 
    ptrnew->info=info;
    ptrnew->father=NULL;
}

